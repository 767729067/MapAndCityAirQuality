<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityInfoAndAirQuality">
    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/paint"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"/>
    <TextView
        android:id="@+id/paint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/back"
        app:layout_constraintRight_toLeftOf="@id/city_name"
        android:layout_width="0dp"
        android:layout_height="40dp"/>
    <TextView
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/paint"
        app:layout_constraintRight_toLeftOf="@id/tt"
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        tools:text="上海"
        android:textColor="#000"
        android:textSize="18sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/city_name"
        app:layout_constraintRight_toLeftOf="@id/paint_"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="空气质量"
        android:gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/paint_"
        app:layout_constraintTop_toTopOf="@id/paint"
        app:layout_constraintLeft_toRightOf="@id/tt"
        app:layout_constraintRight_toLeftOf="@id/save"
        android:layout_width="0dp"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/save"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/paint_"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="保存"/>
    <TextView
        android:layout_margin="20dp"
        android:id="@+id/city_introduce"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="城市介绍"
        android:textSize="14dp"/>
    <ListView
        android:id="@+id/air_quality_lv"
        app:layout_constraintTop_toBottomOf="@id/city_introduce"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>