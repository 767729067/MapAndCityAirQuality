<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/info"
        android:text="城市空气质量"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/city_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            tools:text="上海"
            android:textSize="40sp"
            android:layout_width="165dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/save_info"
            app:layout_constraintTop_toBottomOf="@id/city_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示已保存的信息"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/AQi"
            android:layout_marginLeft="80dp"
            app:layout_constraintTop_toTopOf="@id/city_name"
            app:layout_constraintLeft_toRightOf="@+id/city_name"
            android:text="AQI:"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/quality"
            app:layout_constraintRight_toRightOf="@id/AQi"
            app:layout_constraintTop_toBottomOf="@id/AQi"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="空气质量:"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="@id/AQi"
            app:layout_constraintLeft_toRightOf="@id/AQi"
            android:layout_marginLeft="10dp"
            android:id="@+id/AQI_num"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100"/>
        <TextView
            app:layout_constraintTop_toTopOf="@id/quality"
            app:layout_constraintLeft_toRightOf="@id/AQi"
            android:layout_marginLeft="10dp"
            android:id="@+id/quality_value"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="良"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.baidu.mapapi.map.MapView
        app:layout_constraintTop_toBottomOf="@id/info"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>